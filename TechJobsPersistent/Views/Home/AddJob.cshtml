@using TechJobsPersistent.ViewModels;
@model AddJobViewModel;

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" placeholder="Name Here..." />
        <span asp-validation-for="Name"></span>

    </div>

    <div class="form-group">
        <label asp-for="EmployerId">Employer Name</label>
        <select asp-for="EmployerId" asp-items="Model.Employers">
            <option value="">Pick an employer</option>
        </select>
        <span asp-validation-for="EmployerId"></span>
        <a asp-controller="Employer" asp-action="Add">Add an Employer</a>
    </div>

    <div class="form-group">
        @if (Model.Skills.Count == 0)
        {
            <p>No Skills yet!</p>
            <p><a asp-controller="Skill" asp-action="Add">Add a Skill</a></p>

        }
        else
        {

            @foreach (Skill skill in Model.Skills)
            {
                <label class="form-check-label">
                    <span>@skill.Name</span>
                    <input class="form-check-inline" type="checkbox" name="selectedSkills" value="@skill.Id">
                </label>
            }
        }
    </div>


    <input type="submit" value="Add Job" />
</form>

